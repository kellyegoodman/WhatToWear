<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <ListPreference
        android:defaultValue="@string/settings_units_default"
        android:entries="@array/settings_units_labels"
        android:entryValues="@array/settings_units_values"
        android:key="@string/settings_units_key"
        android:title="@string/settings_units_label" />

    <EditTextPreference
        android:defaultValue="@string/settings_city_default"
        android:inputType="text"
        android:key="@string/settings_city_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_city_label" />

</PreferenceScreen>